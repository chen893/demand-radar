{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/shared/*": [
        "src/shared/*"
      ],
      "@/storage/*": [
        "src/storage/*"
      ],
      "@/background/*": [
        "src/background/*"
      ],
      "@/content/*": [
        "src/content/*"
      ],
      "@/sidepanel/*": [
        "src/sidepanel/*"
      ]
    }
  },
  "include": [
    ".plasmo/index.d.ts",
    "src/**/*",
    ".plasmo/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
